<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.richieoscar.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicApp">
        <activity android:name=".ui.PlayListActivity"
            android:label="@string/playlists"
            android:parentActivityName=".ui.MainActivity"></activity>
        <activity
            android:name=".ui.ConnectActivity"
            android:label="@string/connect"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.BuyMusicActivity"
            android:label="@string/buy_music"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.DetailActivity"
            android:label="@string/now_playing" />
        <activity
            android:name=".ui.AllSongsActivity"
            android:label="@string/all_songs"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>